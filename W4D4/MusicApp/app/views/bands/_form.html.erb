<% action_url = @band.persisted? ? band_url(@band) : bands_url %>
<% method = @band.persisted? ? "PATCH" : "POST" %>
<% submit_text = @band.persisted? ? "Update Band!" : "Create Band!" %>
<form action="<%= action_url %>" method="POST" >

	<input type="hidden" 
		name="_method" 
		value="<%= method %>">

  <input 
    type="hidden"
    name="authenticity_token"
    value="<%= form_authenticity_token %>">
    
 <label>Name:
    <input 
      name="band[name]" 
      type="text"
      value="<%= @band.name %>">
 </label><br>
 
	<input type="submit" value="<%= submit_text %>">
</form>