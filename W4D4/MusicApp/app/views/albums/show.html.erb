<table>
  <th> Band Name </th>
  <th> Album Title</th>
  <th> Recording Type </th>
  <tr>
    <td> <%= @album.band.name %> </td>
    <td><%= @album.album_name%></td>
    <td><%= @album.recording_type%></td>
  </tr>
</table>
<br><br>
Track List:
<% @album.tracks.each do |track|%>
<ul>
	<li><%= link_to track.track_name, track_url(track)%>
	</li>
</ul>
<%end%>
<%= button_to "Delete Album", album_url(@album), method: :delete %>
<%= link_to "Edit Album", edit_album_url(@album) %>
<%= link_to "New Track", new_album_track_url(@album) %>
<%= link_to "Go back", bands_url %>